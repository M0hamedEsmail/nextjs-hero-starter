{
  "name": "nextjs-hero-starter",
  "version": "1.0.0",
  "description": "CLI tool to scaffold production-ready Next.js + HeroUI + Redux Toolkit frontend with authentication and best practices",
  "type": "module",
  "bin": {
    "create-nextjs-hero-starter": "./dist/cli.js"
  },
  "main": "./dist/createProject.js",
  "types": "./dist/createProject.d.ts",
  "files": [
    "dist/",
    "lib/templates/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run build"
  },
  "keywords": [
    "nextjs",
    "next",
    "heroui",
    "redux",
    "redux-toolkit",
    "cli",
    "scaffolding",
    "generator",
    "react",
    "typescript",
    "frontend",
    "starter",
    "template",
    "boilerplate"
  ],
  "author": "m0hamedesmail",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "fs-extra": "^11.3.2",
    "next": "^16.0.8",
    "ora": "^9.0.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/M0hamedEsmail/nextjs-hero-starter.git"
  },
  "bugs": {
    "url": "https://github.com/M0hamedEsmail/nextjs-hero-starter/issues"
  },
  "homepage": "https://github.com/M0hamedEsmail/nextjs-hero-starter#readme"
}
